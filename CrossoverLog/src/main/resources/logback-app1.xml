<included>
	<appender name="FILE_APP1" class="ch.qos.logback.core.FileAppender">
	  <file>Work/logs/app1.log</file>
	  <encoder>
	    <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{50} - %msg%n</pattern>
	  </encoder>
	</appender>
	
	<logger name="com.ankit" level="DEBUG" additivity="false">
	  <appender-ref ref="FILE_APP1" />
	</logger>
</included>